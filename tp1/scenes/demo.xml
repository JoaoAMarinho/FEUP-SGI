<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="faceTexture" file="scenes/images/face.jpg" />
        <texture id="bodyTexture" file="scenes/images/body.jpg" />
        <texture id="underweareTexture" file="scenes/images/underwear.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="darkGreyMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="skinMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.96" g="0.96" b="0.86" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="1" y1="-1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="0" z3="0" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="2.5" top="0.5" height="5" slices="100" stacks="6" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" slices="100" stacks="10" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="1" outer="1" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="topper">
            <transformation>
                <translate x="0" y="2" z="0" />
                <scale x="2" y="1" z="2" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="darkGreyMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        <component id="topperDown">
            <transformation>
                <translate x="0" y="4" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="z" angle="180" />
            </transformation>
            <materials>
                <material id="darkGreyMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="topper" />
            </children>
        </component>
        <component id="topperBase">
            <transformation>
                <translate x="0" y="1.8" z="0" />
                <scale x="0.6" y="0.2" z="0.6" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="darkGreyMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>
        <component id="face">
            <transformation>
                <translate x="0" y="1" z="0" />
                <rotate axis="y" angle="-90" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="skinMaterial" />
            </materials>
            <texture id="faceTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>
        <component id="head">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="y" angle="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <!-- cartola -->
                <componentref id="topperDown" />
                <componentref id="topper" />
                <componentref id="topperBase" />
                <!-- cabeÃ§a -->
                <componentref id="face" />
            </children>
        </component>

        <component id="skeleton">
            <transformation>
                <translate x="0" y="-4.8" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="inherit" />
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>
        <component id="underware">
            <transformation>
                <translate x="0" y="-4.8" z="0" />
                <scale x="2.5" y="0.1" z="2.5" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="underweareTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="body">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
                <rotate axis="y" angle="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="bodyTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="skeleton" />
                <componentref id="underware" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <rotate axis="y" angle="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="head" />
                <componentref id="body" />
            </children>
        </component>
        
    </components>
</lxs>