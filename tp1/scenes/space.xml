<sxs>
    <scene root="space" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="200" y="300" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="d" near="0.1" far="500" left="-5.0" right="5.0" bottom="-5.0" top="5.0">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho>
 
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.png" />
    </textures>

    <materials>
        <material id="default" shininess="100">
            <emission r="1" g="0" b="0" a="1.0" />
            <ambient r="0.96" g="0" b="0" a="1.0" />
            <diffuse r="0.96" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
        
        <material id="sunMaterial" shininess="10">
            <emission r="0.96" g="0.61" b="0.07" a="1.0" />
            <ambient r="0.96" g="0.61" b="0.07" a="1.0" />
            <diffuse r="0.96" g="0.61" b="0.07" a="1.0" />
            <specular r="0.96" g="0.61" b="0.07" a="1.0" />
        </material>

        
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="1" y1="-1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="0" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2.5" top="0.5" height="5" slices="100" stacks="6" />
        </primitive>
        <primitive id="planet">
            <sphere radius="1" slices="40" stacks="40" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="1" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>

        <!-- Space scene -->
        <component id="space">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="sun" />
                <componentref id="planets" />
            </children>
        </component>

        <!-- Sun Component -->
        <component id="sun">
            <transformation>
                <scale x="54.5" y="54.5" z="54.5" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

        <!-- All planets -->
        <component id="planets">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="mercury" />
                <componentref id="venus" />
                <componentref id="earth" />
                <componentref id="mars" />
                <componentref id="jupiter" />
                <componentref id="saturn" />
                <componentref id="uranus" />
                <componentref id="neptune" />
            </children>
        </component>
        

        <!-- Earth planet & Moon -->
        <component id="earth">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="earthMoon" />
                <primitiveref id="planet" />
            </children>
        </component>

        <component id="earthMoon">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

    </components>
</sxs>