<sxs>
    <scene root="space" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="d" near="0.1" far="500" left="-5.0" right="5.0" bottom="-5.0" top="5.0">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho>
 
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.png" />
        <texture id="glassTexture" file="scenes/images/glass.jpg" />
    </textures>

    <materials>
        <material id="default" shininess="100">
            <emission r="0.7" g="0.7" b="0.7" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
        
        <material id="sunMaterial" shininess="10">
            <emission r="0.96" g="0.61" b="0.07" a="1.0" />
            <ambient r="0.96" g="0.61" b="0.07" a="1.0" />
            <diffuse r="0.96" g="0.61" b="0.07" a="1.0" />
            <specular r="0.96" g="0.61" b="0.07" a="1.0" />
        </material>

        <material id="antenna" shininess="10">
            <emission r="0.6" g="0.6" b="0.6" a="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="1" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>
        

        <material id="metalMaterial" shininess="50">
            <emission r="0.41" g="0.41" b="0.41" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
        
        <material id="darkMetalMaterial" shininess="50">
            <emission r="0.27" g="0.27" b="0.27" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="darkMaterial" shininess="50">
            <emission r="0.15" g="0.15" b="0.15" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-1" y1="-1" x2="1" y2="1" />
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="-1" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="0" y1="1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="-1" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2.5" top="2.5" height="5" slices="6" stacks="6" />
        </primitive>
        <primitive id="cylinder1">
            <cylinder base="2.5" top="0.7" height="5" slices="6" stacks="6" />
        </primitive>
        <primitive id="cylinder2">
            <cylinder base="0.7" top="0.0" height="1" slices="6" stacks="6" />
        </primitive>
        <primitive id="cylinder3">
            <cylinder base="2" top="0.7" height="7" slices="4" stacks="6" />
        </primitive>
        <primitive id="pentaCylinder">
            <cylinder base="1" top="1" height="1" slices="5" stacks="5" />
        </primitive>
        <primitive id="planet">
            <sphere radius="1" slices="40" stacks="40" />
        </primitive>
        <primitive id="sphere">
            <sphere radius="1" slices="60" stacks="60" />
        </primitive>
        <primitive id="torus">
            <torus inner="0.3" outer="0.7" slices="5" loops="5" />
        </primitive>
    </primitives>

    <components>

        <!-- Space scene -->
        <component id="space">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipBody" />
                <componentref id="spaceshipWings" />
                <componentref id="spaceshipBases" />
                <componentref id="spaceshipBasesRectangle" />
                <componentref id="spaceshipCabineBubble" /> 
                <componentref id="spaceshipPropulsers" />
            </children>
        </component>

        <!-- Spaceship Body-->
        <component id="spaceshipBody">
            <transformation>
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="metalMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder" />
                <componentref id="spaceshipCabine" /> 
            </children>
        </component>

        <!-- Spaceship Body Base-->
        <component id="spaceshipBases">
            <transformation>
                <scale x="2.6" y="2.2" z="0" /> 
            </transformation>
            <materials>
                <material id="metalMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipBase1" />
                <componentref id="spaceshipBase2" />
            </children>
        </component>
        <component id="spaceshipBase1">
            <transformation>
                 <translate x="0.95" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="spaceshipBase2">
            <transformation>
                <rotate axis="z" angle="-180" />
                <translate x="0.95" y="0" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="spaceshipBasesRectangle">
            <transformation>
                <scale x="2.5" y="2.2" z="1" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="metalMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <!-- Spaceship Cabine -->
        <component id="spaceshipCabine">
            <transformation>
                <translate x="0" y="0" z="5" />
            </transformation>
            <materials>
                <material id="darkMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder1" />
                <componentref id="spaceshipCabineTop" />
            </children>
        </component>
        <component id="spaceshipCabineBubble">
            <transformation>
                <rotate axis="x" angle="20" />
                <scale x="1.5" y="0.5" z="2.3" />
                <translate x="0" y="7.5" z="2.75" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="glassTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <!-- Spaceship Cabine Top-->
        <component id="spaceshipCabineTop">
            <transformation>
                <translate x="0" y="0" z="5" />
            </transformation>
            <materials>
                <material id="darkMetalMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder2" />
            </children>
        </component>

        <!-- Spaceship Wing Component -->
        <component id="spaceshipWing">
            <transformation>
            </transformation>
            <materials>
                <material id="darkMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder3" />
                <componentref id="spaceshipWingLid" />
            </children>
        </component>
        <component id="spaceshipWingLid">
            <transformation>
                <rotate axis="z" angle="45" />
                <scale x="0.5" y="1" z="1" />
                <translate x="0" y="-0.5" z="7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>

        <!-- Spaceship Wings -->
        <component id="spaceshipWings">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipWing1" />
                <componentref id="spaceshipWing2" />
                <componentref id="spaceshipWing3" />
                <componentref id="spaceshipWing4" />
            </children>
        </component>
        <component id="spaceshipWing1">
            <transformation>
                <translate x="-2" y="-1" z="2" />
                <rotate axis="y" angle="90" />
                <rotate axis="x" angle="-20" />
                <scale x="1" y="0.2" z="1" />
                <rotate axis="z" angle="45" />
                <translate x="0" y="0" z="5" />
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipWing" />
            </children>
        </component>
        <component id="spaceshipWing3">
            <transformation>
                <translate x="2" y="-1" z="2" />
                <rotate axis="y" angle="-90" />
                <rotate axis="x" angle="-20" />
                <scale x="1" y="0.2" z="1" />
                <rotate axis="z" angle="45" />
                <translate x="0" y="0" z="5" />            
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipWing" />
            </children>
        </component>
        <component id="spaceshipWing2">
            <transformation>
                <translate x="-2" y="1" z="2" />
                <rotate axis="y" angle="90" />
                <rotate axis="x" angle="20" />
                <scale x="1" y="0.2" z="1" />
                <rotate axis="z" angle="45" />
                <translate x="0" y="0" z="5" /> 
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipWing" />
            </children>
        </component>
        <component id="spaceshipWing4">
            <transformation>
                <translate x="2" y="1" z="2" />
                <rotate axis="y" angle="-90" />
                <rotate axis="x" angle="20" />
                <scale x="1" y="0.2" z="1" />
                <rotate axis="z" angle="45" />
                <translate x="0" y="0" z="5" /> 
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipWing" />
            </children>
        </component>

        <!-- Spaceship Propulsers -->
        <component id="spaceshipPropulsers">
            <transformation>
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipPropulserUpLeft" />
                <componentref id="spaceshipPropulserUpRight" />
                <componentref id="spaceshipPropulserDownLeft" />
                <componentref id="spaceshipPropulserDownRight" />
            </children>
        </component>
        <component id="spaceshipPropulserUpLeft">
            <transformation>
                <translate x="-1.2" y="1.1" z="0" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipPropulser" />
            </children>
        </component>
        <component id="spaceshipPropulserUpRight">
            <transformation>
                <translate x="1.2" y="1.1" z="0" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipPropulser" />
            </children>
        </component>
        <component id="spaceshipPropulserDownLeft">
            <transformation>
                <translate x="-1.2" y="-1.1" z="0" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipPropulser" />
            </children>
        </component>
        <component id="spaceshipPropulserDownRight">
            <transformation>
                <translate x="1.2" y="-1.1" z="0" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="spaceshipPropulser" />
            </children>
        </component>

        <!-- Spaceship Propulser Piece -->
        <component id ="spaceshipPropulser">
            <transformation>
                <scale x="1.2" y="1.1" z="1" />
                <rotate axis="z" angle="-54" />
            </transformation>
            <materials>
                <material id="darkMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="pentaCylinder" />
                <componentref id="smallerPentaCylinder" />
                <componentref id="spaceshipPropulserLid" />
                <componentref id="spaceshipPropulserFire" />
            </children>
        </component>
        <component id="smallerPentaCylinder">
            <transformation>
                <scale x="-0.7" y="-0.7" z="-1" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="pentaCylinder" />
            </children>
        </component>
        <component id="spaceshipPropulserLid">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="1" y="1" z="0.3" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="torus" />
            </children>
        </component>
        <component id="spaceshipPropulserFire">
            <transformation>
                <scale x="0.5" y="0.5" z="2" />
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</sxs>