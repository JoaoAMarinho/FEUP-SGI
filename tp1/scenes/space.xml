<sxs>
    <scene root="space" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="1000000" angle="45">
            <from x="0" y="0" z="400" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="d" near="0.1" far="500" left="-5.0" right="5.0" bottom="-5.0" top="5.0">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="0">
            <location x="0.0" y="0.0" z="0.0" w="0.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0" g="0" b="0" a="0" />
            <attenuation constant="1.0" linear="1.0" quadratic="1.0" />  
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.png" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="mercuryTexture" file="scenes/images/mercury.jpg" />
        <texture id="venusTexture" file="scenes/images/venus.jpg" />
        <texture id="marsTexture" file="scenes/images/mars.jpg" />
        <texture id="jupiterTexture" file="scenes/images/jupiter.jpg" />
        <texture id="starsTexture" file="scenes/images/stars2.jpg" />
    </textures>

    <materials>
        <material id="default" shininess="10">
            <emission r="0.96" g="0.61" b="0.07" a="1.0" />
            <ambient r="0.96" g="0.61" b="0.07" a="1.0" />
            <diffuse r="0.96" g="0.61" b="0.07" a="1.0" />
            <specular r="0.96" g="0.61" b="0.07" a="1.0" />
        </material>
        
        <material id="sunMaterial" shininess="10">
            <emission r="1" g="1" b="1" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="1" y1="-1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="0" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2.5" top="0.5" height="5" slices="100" stacks="6" />
        </primitive>
        <primitive id="planet">
            <sphere radius="1" slices="60" stacks="60" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="1" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>

        <!-- Space scene -->
        <component id="space">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="stars" />
                <componentref id="sun" /> 
                <componentref id="planets" />
            </children>
        </component>

         <!-- Stars background -->
        <component id="stars">
            <transformation>
                <scale x="1000" y="1000" z="1000" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="starsTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="starsFront" />
                <componentref id="starsBack" />
                <componentref id="starsRight" />
                <componentref id="starsLeft" />
                <componentref id="starsUp" />
                <componentref id="starsBottom" />
            </children>
        </component>    

        <component id="starsFront">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>   

        <component id="starsBack">
            <transformation>
                <rotate axis="x" angle="-180" />
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="starsRight">
            <transformation>
                <rotate axis="y" angle="90" />
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component> 

        <component id="starsLeft">
            <transformation>
                <rotate axis="y" angle="-90" />
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="starsUp">
            <transformation>
                <rotate axis="x" angle="90" />
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="starsBottom">
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>   

        <!-- Sun Component -->
        <component id="sun">
            <transformation>
                <scale x="80" y="80" z="80" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

        <!-- All planets -->
        <component id="planets">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="mercury" />
                <componentref id="venus" />
                <componentref id="earth" />
                <componentref id="mars" />
                <componentref id="jupiter" />
            </children>
        </component>

        <!-- Mercury -->
        <component id="mercury">
            <transformation>
                <translate x="100" y="0" z="0" />
                <scale x="4.8" y="4.8" z="4.8" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="mercuryTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>   

        <!-- Venus -->
        <component id="venus">
            <transformation>
                <translate x="150" y="0" z="0" />
                <scale x="12.1" y="12.1" z="12.1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="venusTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

        <!-- Earth planet & Moon -->
        <component id="earth">
            <transformation>
                <translate x="200" y="0" z="0" />
                <scale x="12.7" y="12.7" z="12.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="earthTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="earthMoon" />
                <primitiveref id="planet" />
            </children>
        </component>

        <component id="earthMoon">
            <transformation>
                <scale x="0.4" y="0.4" z="0.4" />
                <translate x="4" y="0" z="4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="moonTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

        <!-- Venus -->
        <component id="mars">
            <transformation>
                <translate x="250" y="0" z="0" />
                <scale x="6.7" y="6.7" z="6.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="marsTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

        <!-- Jupiter -->
        <component id="jupiter">
            <transformation>
                <translate x="300" y="0" z="0" />
                <scale x="20" y="20" z="20" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="jupiterTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

    </components>
</sxs>