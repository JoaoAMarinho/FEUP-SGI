<sxs>
    <scene root="space" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="10000000" angle="45">
            <from x="40" y="20" z="100" />
            <to x="400" y="0" z="0" />
        </perspective>
        <ortho id="d" near="0.1" far="500" left="-5.0" right="5.0" bottom="-5.0" top="5.0">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="80.0" y="0.0" z="0.0" w="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="0.0" />
            <diffuse r="0.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.0" linear="1.0" quadratic="0.0" />  
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="starsTexture" file="scenes/images/stars.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.png" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="mercuryTexture" file="scenes/images/mercury.jpg" />
        <texture id="venusTexture" file="scenes/images/venus.jpg" />
        <texture id="marsTexture" file="scenes/images/mars.jpg" />
        <texture id="jupiterTexture" file="scenes/images/jupiter.jpg" />
        <texture id="saturnTexture" file="scenes/images/saturn.jpg" />
        <texture id="saturnRingTexture" file="scenes/images/saturn_ring.png" />
        <texture id="uranusTexture" file="scenes/images/uranus.jpg" />
        <texture id="neptuneTexture" file="scenes/images/neptune.jpg" />
    </textures>

    <materials>
        <material id="default" shininess="10">
            <emission r="0.96" g="0.61" b="0.07" a="1.0" />
            <ambient r="0.96" g="0.61" b="0.07" a="1.0" />
            <diffuse r="0.96" g="0.61" b="0.07" a="1.0" />
            <specular r="0.96" g="0.61" b="0.07" a="1.0" />
        </material>
        
        <material id="sunMaterial" shininess="10">
            <emission r="1" g="1" b="1" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="ringMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="0.2" />
            <ambient r="0.86" g="0.78" b="0.66" a="1" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0.2" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="1" y1="-1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="0" z3="0" />
        </primitive>
        <primitive id="cylinder">
            <cylinder base="2.5" top="0.5" height="5" slices="100" stacks="6" />
        </primitive>
        <primitive id="planet">
            <sphere radius="7" slices="60" stacks="60" />
        </primitive>
        <primitive id="torus">
            <torus inner="1.5" outer="12" slices="40" loops="40" />
        </primitive>
    </primitives>

    <components>

        <!-- Space scene -->
        <component id="space">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="stars" />
                <componentref id="sun" />
                <componentref id="planets" />
            </children>
        </component>

         <!-- Stars background -->
         <component id="stars">
            <transformation>
                <scale x="-1000" y="-1000" z="-1000" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="starsTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>    

        <!-- Sun Component -->
        <component id="sun">
            <transformation>
                <scale x="8" y="8" z="8" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
                <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

        <!-- All planets -->
        <component id="planets">
            <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="50" y="0" z="0" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="mercury" />
                <componentref id="venus" />
                <componentref id="earth" />
                <componentref id="mars" />
                <componentref id="jupiter" />
                <componentref id="saturn" />
                <componentref id="uranus" />
                <componentref id="neptune" />
            </children>
        </component>

        <!-- Mercury -->
        <component id="mercury">
            <transformation>
                <translate x="50" y="0" z="0" />
                <scale x="0.4" y="0.4" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="mercuryTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>   

        <!-- Venus -->
        <component id="venus">
            <transformation>
                <translate x="107" y="0" z="0" />
                <scale x="0.9" y="0.9" z="0.9" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="venusTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

        <!-- Earth planet & Moon -->
        <component id="earth">
            <transformation>
                <translate x="149" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="earthTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="earthMoon" />
                <primitiveref id="planet" />
            </children>
        </component>
        <component id="earthMoon">
            <transformation>
                <scale x="0.25" y="0.25" z="0.25" />
                <translate x="4" y="0" z="4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="moonTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>

        <!-- Venus -->
        <component id="mars">
            <transformation>
                <translate x="219" y="0" z="0" />
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="marsTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

        <!-- Jupiter -->
        <component id="jupiter">
            <transformation>
                <translate x="741" y="0" z="0" />
                <scale x="11.2" y="11.2" z="11.2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="jupiterTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component> 

        <!-- Saturn -->
        <component id="saturn">
            <transformation>
                <translate x="1474" y="0" z="0" />
                <scale x="9.4" y="9.4" z="9.4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="saturnTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
                <componentref id="saturnRings" />
            </children>
        </component>  
        <!-- Saturn's Rings -->
        <component id="saturnRings">
            <transformation>
                <scale x="1" y="1" z="0.2" />
                <translate x="-78" y="0" z="0" />
            </transformation>
            <materials>
                <material id="ringMaterial" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="saturnRing" />
                <componentref id="saturnRing2" />
            </children>
        </component>  
        <component id="saturnRing">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="torus" />
            </children>
        </component>  
        <component id="saturnRing2">
            <transformation>
                <scale x="1.4" y="1.4" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="inherit" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="saturnRing" />
            </children>
        </component>  

        <!-- Uranus -->
        <component id="uranus">
            <transformation>
                <translate x="2944" y="0" z="0" />
                <scale x="4" y="4" z="4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="uranusTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  

        <!-- Neptune -->
        <component id="neptune">
            <transformation>
                <translate x="4475" y="0" z="0" />
                <scale x="3.9" y="3.9" z="3.9" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="neptuneTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="planet" />
            </children>
        </component>  
    </components>
</sxs>