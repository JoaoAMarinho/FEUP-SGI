<sxs>
    <scene root="satellite" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="d" near="0.1" far="500" left="-5.0" right="5.0" bottom="-5.0" top="5.0">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </ortho>
 
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.png" />
        <texture id="antennaTexture" file="scenes/images/antenna.png" />
    </textures>

    <materials>
        <material id="default" shininess="10">
            <emission r="0.4" g="0.4" b="0.4" a="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="antenna" shininess="10">
            <emission r="0.6" g="0.6" b="0.6" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>
        
        <material id="sunMaterial" shininess="10">
            <emission r="0.96" g="0.61" b="0.07" a="1.0" />
            <ambient r="0.96" g="0.61" b="0.07" a="1.0" />
            <diffuse r="0.96" g="0.61" b="0.07" a="1.0" />
            <specular r="0.96" g="0.61" b="0.07" a="1.0" />
        </material>

        
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <translate x="0" y="0" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="rectangle_medium">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="triangle">
            <triangle x1="1" y1="-1" z1="0" x2="1" y2="0" z2="0" x3="0" y3="0" z3="0" />
        </primitive>
        <primitive id="planet">
            <sphere radius="1" slices="40" stacks="40" />
        </primitive>
        <primitive id="torus">
            <torus inner="1" outer="1" slices="10" loops="10" />
        </primitive>
        <primitive id="satelliteOuter">
            <cylinder base="1.5" top="1.5" height="3" slices="6" stacks="1" />
        </primitive>
        <primitive id="satelliteOuterJoin">
            <cylinder base="1.5" top="1" height="0.5" slices="6" stacks="1" />
        </primitive>
        <primitive id="antenna1">
            <cylinder base="0.5" top="1.5" height="0.3" slices="30" stacks="3" />
        </primitive>
        <primitive id="antenna2">
            <cylinder base="1.5" top="2.5" height="0.5" slices="30" stacks="3" />
        </primitive>
        <primitive id="antenna3">
            <cylinder base="2.5" top="2.8" height="0.3" slices="30" stacks="3" />
        </primitive>
        <primitive id="innerAntenna">
            <cylinder base="0.5" top="2.8" height="1.1" slices="30" stacks="3" />
        </primitive>
    </primitives>

    <components>

        <component id="satellite">
            <transformation>
            </transformation>
            <materials>
                <material id="default" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="satelliteAntennas" />
            </children>
        </component>

        <!-- Satellite Component -->
        <component id="satelliteAntennas">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                
                <primitiveref id="antenna1" />
                <componentref id="antenna2" />
                <componentref id="innerAntenna" />
            </children>
        </component>
        <component id="antenna2">
            <transformation>
                <translate x="0" y="0" z="0.3" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="antenna2" />
                <componentref id="antenna3" />
            </children>
        </component>
        <component id="antenna3">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="antenna3" />
            </children>
        </component>
        <component id="innerAntenna">
            <transformation>
                <scale x="1" y="1" z="-1" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="antenna" />
            </materials>
                <texture id="none" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="innerAntenna" />
            </children>
        </component>

    </components>
</sxs>